<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <display-name>java-web</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <filter>
    <filter-name>HomeFilter</filter-name>
    <filter-class>filter.HomeFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>HomeFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>RoleFilter</filter-name>
    <filter-class>filter.RoleFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>RoleFilter</filter-name>
    <url-pattern>/user-management</url-pattern>
    <url-pattern>/update-user</url-pattern>
    <url-pattern>/product-management</url-pattern>
    <url-pattern>/update-product</url-pattern>
    <url-pattern>/insert-product</url-pattern>
    <url-pattern>/update-order</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>LoginFilter</filter-name>
    <filter-class>filter.LoginFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>LoginFilter</filter-name>
    <url-pattern>/checkout</url-pattern>
    <url-pattern>/insert-product</url-pattern>
    <url-pattern>/order</url-pattern>
    <url-pattern>/order-detail</url-pattern>
    <url-pattern>/order-management</url-pattern>
    <url-pattern>/product-management</url-pattern>
    <url-pattern>/update-order</url-pattern>
    <url-pattern>/update-product</url-pattern>
    <url-pattern>/update-user</url-pattern>
    <url-pattern>/user-management</url-pattern>
  </filter-mapping>
</web-app>